generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Band {
  @@map("bands")

  id String @id @default(uuid()) // @db.Uuid

  name String
  albums Album[]
}

model Album {
  @@map("albums")

  id String @id @default(uuid()) // @db.Uuid

  name String
  bandId String @map("band_id") // @db.Uuid
  band Band @relation(fields: [bandId], references: [id])
}
